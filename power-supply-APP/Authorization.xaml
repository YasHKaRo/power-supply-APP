<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="power_supply_APP.Authorization"
      Title="Authorization" av:DesignHeight="150" av:DesignWidth="400">
    <Page.Resources>
        <Style x:Key="BlackAndWhite">
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.Background" Value="Black" />
            <Setter Property="Control.Foreground" Value="White" />
            <Setter Property="FrameworkElement.Margin" Value="10" />
        </Style>
    </Page.Resources>
    <StackPanel Background="Black">
        <TextBlock Text="Логин:" Foreground="White" HorizontalAlignment="Center"/>
        <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>
        <TextBlock Text="Пароль:" Foreground="White" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
        <Button x:Name="button_authorization" Content="Авторизация"
                Style="{StaticResource BlackAndWhite}" Width="100" Click="LoginButton_Click"/>
        <TextBlock x:Name="MessageTextBlock" Foreground="Red" Margin="0,10,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
